<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.checklist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBL88fLdjS90ou2hihDezGlMTwOaUqYc7o" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GMapsActivity"
            android:label="@string/title_activity_map"
            android:launchMode="singleInstance" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sample.MainActivity" />
        </activity>
        <activity
            android:name=".SocialShare"
            android:label="@string/title_activity_social_share" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.MainActivity" />
        </activity>
        <activity
            android:name=".ImageGalleryTileView"
            android:label="@string/title_activity_image_galler_tile_view"
            android:launchMode="singleInstance" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.MainActivity" />
        </activity>
        <activity
            android:name=".FullScreenImageActivity"
            android:label="@string/title_activity_image_gallery_single_image"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.ImageGalleryTileView" />
        </activity>
        <activity
            android:name=".ContactList"
            android:label="@string/title_activity_contact_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.MainActivity" />
        </activity>
        <activity
            android:name=".EditContactList"
            android:label="@string/title_edit_activity_contact_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.ContactList" />
        </activity>
        <activity
            android:name=".SingleContact"
            android:label="@string/title_activity_single_contact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.MainActivity" />
        </activity>
        <activity
            android:name=".NewContact"
            android:label="@string/title_activity_new_contact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.checklist.MainActivity" />
        </activity>
    </application>

</manifest>